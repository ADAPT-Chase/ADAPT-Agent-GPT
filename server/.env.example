# Node environment
NODE_ENV=development

# Server port
PORT=5001

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=adapt_agent_gpt_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRATION=1h

# Google Cloud Platform configuration
GCP_PROJECT_ID=your_gcp_project_id
GCP_REGION=us-central1
CLOUD_SQL_INSTANCE_NAME=your_cloud_sql_instance_name

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Firestore configuration
FIRESTORE_COLLECTION=adapt_agent_data

# Vertex AI configuration
VERTEX_AI_ENDPOINT=your_vertex_ai_endpoint

# Email configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Shared configuration path
SHARED_CONFIG_PATH=/path/to/shared_config.json

# ADAPT-Agent-System integration
ADAPT_AGENT_SYSTEM_PATH=/path/to/ADAPT-Agent-System

# Logging
LOG_LEVEL=info

# Local/GCP resource toggle
USE_LOCAL_RESOURCES=false

# Local database URL (for development)
LOCAL_DB_URL=postgresql://postgres:postgres@localhost:5432/adapt_agent_gpt_db

# Local Redis URL (for development)
LOCAL_REDIS_URL=redis://localhost:6379

# Remember to keep this file secure and never commit it to version control
# Copy this file to .env and fill in the actual values for your environment